      </Paragraph>
    </SupplProvision>
    <SupplProvision AmendLawId="418214" AmendLawNum="平成一八年六月一四日政令第二一四号" Extract="false" Id="c8be2afd-b2db-4e11-ba19-209bbd345baa" Type="Amend">
