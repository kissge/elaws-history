        </ParagraphSentence>
      </Paragraph>
    </SupplProvision>
    <SupplProvision AmendLawId="412519" AmendLawNum="平成一二年一二月二〇日政令第五一九号" Extract="false" Id="694f3cca-aeee-4107-9fcd-ed23a1115165" Type="Amend">
