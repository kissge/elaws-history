          </ParagraphSentence>
        </Paragraph>
      </Article>
    </SupplProvision>
    <SupplProvision AmendLawId="417351" AmendLawNum="平成一七年一一月二八日政令第三五一号" Extract="false" Id="4c245437-53ea-4e9d-94a0-8673fcacab28" Type="Amend">
      <SupplProvisionLabel>附　則</SupplProvisionLabel>
      <Paragraph Hide="false" Num="1" OldStyle="false">
        <ParagraphNum/>
        <ParagraphSentence>
