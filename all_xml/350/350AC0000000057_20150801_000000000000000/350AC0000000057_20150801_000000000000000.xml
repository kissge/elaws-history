      <Chapter Delete="false" Hide="false" Num="5">
        <ChapterTitle>第五章　財務及び会計</ChapterTitle>
        <Article Delete="false" Hide="false" Num="32">
          <ArticleCaption>（事業年度）</ArticleCaption>
          <ArticleTitle>第三十二条</ArticleTitle>
          <Paragraph Hide="false" Num="1">
            <ParagraphNum/>
            <ParagraphSentence>
