            <Paragraph Hide="false" Num="2" OldStyle="false">
              <ParagraphNum>２</ParagraphNum>
              <ParagraphSentence>
                <Sentence WritingMode="vertical">前項の編成計画の内容は、おおむね次の各号に掲げるとおりとする。</Sentence>
              </ParagraphSentence>
              <Item Delete="false" Hide="false" Num="1">
