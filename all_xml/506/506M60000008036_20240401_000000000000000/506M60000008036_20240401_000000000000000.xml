            <ItemTitle>二</ItemTitle>
            <ItemSentence>
              <Column Num="1">
                <Sentence Num="1" WritingMode="vertical">市町村</Sentence>
              </Column>
              <Column Num="2">
                <Sentence Num="1" WritingMode="vertical">次の算式により算定した額</Sentence>
              </Column>
            </ItemSentence>
            <List>
              <ListSentence>
                <Sentence Num="1" WritingMode="vertical">算式</Sentence>
