      <Paragraph Hide="false" Num="1" OldStyle="false">
        <ParagraphNum/>
        <ParagraphSentence>
          <Sentence Function="main" Num="1" WritingMode="vertical">この政令は、平成二十九年四月一日から施行する。</Sentence>
          <Sentence Function="proviso" Num="2" WritingMode="vertical">ただし、第二十三条及び第二十六条の規定は、公布の日から施行する。</Sentence>
        </ParagraphSentence>
      </Paragraph>
