          <ParagraphSentence>
            <Sentence WritingMode="vertical">本法施行ノ期日ハ各規定ニ付勅令ヲ以テ之ヲ定ム</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
    </SupplProvision>
    <SupplProvision AmendLawId="322046" AmendLawNum="昭和二二年四月一日法律第四六号" Extract="true" Id="5082822c-18c7-11e8-a136-005056b30d52">
