        <ParagraphNum/>
        <ParagraphSentence>
          <Sentence>この省令は、公布の日から施行する。</Sentence>
        </ParagraphSentence>
      </Paragraph>
    </SupplProvision>
    <SupplProvision AmendLawId="362054" AmendLawNum="昭和六二年九月二九日運輸省令第五四号" Id="a203e3ec-1891-11e8-ab74-005056b30d52">
