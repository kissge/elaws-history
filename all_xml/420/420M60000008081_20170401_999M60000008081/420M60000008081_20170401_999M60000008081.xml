      <SupplProvisionLabel>附　則</SupplProvisionLabel>
      <Paragraph Num="1">
        <ParagraphNum/>
        <ParagraphSentence>
          <Sentence>この省令は、公布の日から施行する。</Sentence>
        </ParagraphSentence>
      </Paragraph>
    </SupplProvision>
    <SupplProvision AmendLawId="429029" AmendLawNum="平成二九年三月三一日総務省令第二九号" Extract="true" Id="1245b748-192d-11e8-a136-005056b30d52">
