            <Subitem1 Num="3">
              <Subitem1Title>ハ</Subitem1Title>
              <Subitem1Sentence>
                <Column Num="1">
                  <Sentence Num="1" WritingMode="vertical">年度平均排出量が千万トン以上である脱炭素成長型投資事業者</Sentence>
                </Column>
                <Column Num="2">
                  <Sentence Num="1" WritingMode="vertical">千二百六万百円</Sentence>
                </Column>
              </Subitem1Sentence>
            </Subitem1>
