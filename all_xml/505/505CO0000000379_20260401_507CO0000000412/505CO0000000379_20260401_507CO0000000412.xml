            <Subitem1 Num="1">
              <Subitem1Title>イ</Subitem1Title>
              <Subitem1Sentence>
                <Column Num="1">
                  <Sentence Num="1" WritingMode="vertical">年度平均排出量が十万トン以上百万トン未満である脱炭素成長型投資事業者</Sentence>
                </Column>
                <Column Num="2">
                  <Sentence Num="1" WritingMode="vertical">七百八十七万二千九百円</Sentence>
                </Column>
              </Subitem1Sentence>
            </Subitem1>
            <Subitem1 Num="2">
              <Subitem1Title>ロ</Subitem1Title>
              <Subitem1Sentence>
                <Column Num="1">
                  <Sentence Num="1" WritingMode="vertical">年度平均排出量が百万トン以上千万トン未満である脱炭素成長型投資事業者</Sentence>
                </Column>
                <Column Num="2">
                  <Sentence Num="1" WritingMode="vertical">千三十四万千三百円</Sentence>
                </Column>
              </Subitem1Sentence>
